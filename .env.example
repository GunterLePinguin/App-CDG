# Variables d'environnement pour le projet CDG
# Copier ce fichier vers .env et modifier les valeurs si nécessaire

# Base de données (utilise les conteneurs Docker par défaut)
DATABASE_URL=postgresql://cdg_user:cdg_password@db:5432/airport

# OpenAI (optionnel - laissez "dummy_key" pour fonctionnement sans IA)
OPENAI_API_KEY=dummy_key

# Générateur de données - Intervalles en secondes
FLIGHT_UPDATE_INTERVAL=30
PASSENGER_GENERATION_INTERVAL=60
SERVICE_UPDATE_INTERVAL=45
EVENT_GENERATION_INTERVAL=20

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Configuration
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO
